<IfModule mod_rewrite.c>
RewriteEngine On

RewriteBase /TPE_webII_cheves_dannunzio-main/

# Permitir acceso directo a archivos y carpetas reales
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Redirigir todo lo dem√°s a router.php
RewriteRule ^(.+)$ router.php?action=$1 [QSA,L]
</IfModule>

